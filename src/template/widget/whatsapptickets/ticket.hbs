<div class="row row-whatsapptickets">
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
    <div class="my-field my-field-column">
      <label>Tipo:</label>
      <select class="my-selectionmenu type-whatsapptickets">
        <option value="text">Texto</option>
        <option value="selection">Selecci&oacute;n</option>
      </select>
    </div>
  </div>
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
    <div class="my-field my-field-column">
      <label>Pregunta:</label>
      <input type="text" class="my-text question-whatsapptickets" value="{{question}}" placeholder="Pregunta" />
    </div>
  </div>
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 value-column-whatsapptickets">
    <div class="my-field my-field-column">
      <label>Valor (Nombre: {{name}}):</label>
      <div class="my-field-with-buttons-x1">
        <input type="hidden" value="{{name}}" class="name-whatsapptickets" />
        <input type="text" class="my-text value-whatsapptickets" value="{{value}}" placeholder="Valor" />
        <button type="button" class="my-button-only-icon my-button-simple delete-whatsapptickets">
          <span class="fas fa-trash-alt fa-1x"></span>
        </button>
      </div>
    </div>
  </div>
</div>