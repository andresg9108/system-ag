<div class="my-keypad">
  <button onclick="oSend.goBack()" class="my-button-only-icon my-button-simple">
    <span class="fas fa-backspace fa-1x"></span>
  </button>
  <button onclick="oAppMain.goTo('', '')" class="my-button-only-icon my-button-simple">
    <span class="fas fa-home fa-1x"></span>
  </button>
</div>

<h2><span class="fab fa-whatsapp fa-1x"></span> Enviar: {{name}}</h2>

<form id="sendForm" name="sendForm" method="post" onsubmit="return oSend.send(this)">

  <div class="my-form1-title">
    Informaci&oacute;n:
  </div>

  <div class="my-field my-field-column">
    <label for="name">Nombre:</label>
    <input type="text" class="my-text" id="name" name="name" value="{{name}}" placeholder="Nombre" readonly="true"/>
    <span id="errname"></span>
  </div>

  <div class="my-field my-field-column">
    <label for="number">N&uacute;mero:</label>
    <input type="text" class="my-text" id="number" name="number" value="{{number}}" placeholder="N&uacute;mero" />
    <span id="errnumber"></span>
  </div>

  <div class="my-field my-field-column">
    <label for="message">Mensaje:</label>
    <textarea id="message" name="message" placeholder="Mensaje" class="my-textarea" readonly="true">{{message}}</textarea>
    <span id="errmessage"></span>
  </div>

  <div id="whatsappquestios" data-template="true" class="my-loading1">
    <span class="fas fa-spinner fa-3x"></span>
  </div>

  <br /><br /><br />
  <div id="keypad" data-template="true" class="my-keypad">
    <button id="btnsend" type="submit" class="my-button-icon my-button-simple">
      <span class="fas fa-share-square fa-1x"></span>
      Enviar
    </button>
  </div>

</form>